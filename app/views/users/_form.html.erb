  </div>
   <div class="field">
    <%= f.label :state, class: "form-label" %>
    <%= f.text_field :state , class: "form-control"%>
  </div>
   <div class="field">
    <%= f.label :distt, class: "form-label" %>
    <%= f.text_field :distt, class: "form-control"%>
  </div>
